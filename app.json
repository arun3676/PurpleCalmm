{
  "expo": {
    "name": "Purrple Calm",
    "slug": "purrple-calm",
    "scheme": "purrplecalm",
    "version": "1.0.0",
    "orientation": "portrait",
    "splash": { "resizeMode": "contain", "backgroundColor": "#0B0B14" },
    "userInterfaceStyle": "automatic",
    "ios": { "supportsTablet": true },
    "android": {
      "adaptiveIcon": { "backgroundColor": "#0B0B14" },
      "permissions": ["VIBRATE", "WAKE_LOCK", "SCHEDULE_EXACT_ALARM", "USE_FULL_SCREEN_INTENT"],
      "package": "com.purrplecalm.app"
    },
    "web": { "bundler": "metro" },
    "plugins": ["expo-notifications", "expo-font"],
    "extra": { "eas": {} }
  }
}
